{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "24.0.0",
  "extends": "@tsconfig/node24/tsconfig.json",
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "lib": [
      "dom",
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "jsx": "react-jsx",
  }
}